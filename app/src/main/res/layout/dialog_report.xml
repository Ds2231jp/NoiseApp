<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noise Report"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <GridLayout
        android:id="@+id/reportGridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="5">

        <TextView android:text="Min dB:" android:layout_marginEnd="8dp" android:textStyle="bold"/>
        <TextView android:id="@+id/report_min_db"/>

        <TextView android:text="Max dB:" android:layout_marginEnd="8dp" android:textStyle="bold"/>
        <TextView android:id="@+id/report_max_db"/>

        <TextView android:text="Avg dB:" android:layout_marginEnd="8dp" android:textStyle="bold"/>
        <TextView android:id="@+id/report_avg_db"/>

        <TextView android:text="Duration:" android:layout_marginEnd="8dp" android:textStyle="bold"/>
        <TextView android:id="@+id/report_duration"/>

        <TextView android:text="Location:" android:layout_marginEnd="8dp" android:layout_marginTop="8dp" android:textStyle="bold"/>
        <TextView android:id="@+id/report_location" android:layout_marginTop="8dp"/>

    </GridLayout>

    <Button
        android:id="@+id/exportPdfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_gravity="end"
        android:text="Export as PDF" />

</LinearLayout>
